 {%block postList%} 
    {% if posts %}
        {% for post in posts %}
            {{ include(
                'FrontBundle:Article:post-summary.html.twig',
                { 'post': post }
            ) }}

        {% endfor %}
    {%else%}
        <p class="alert-info">
        Sorry, no more posts yet! Please publish...
        </p>
    {% endif %}
{% endblock %} 
{%block postPagination%}  
     <div class="navigation">
        {{ knp_pagination_render(posts, '::frontpagination.html.twig') }}
    </div>
 {% endblock %} 
