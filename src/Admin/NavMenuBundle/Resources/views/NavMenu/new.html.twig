{% extends 'NavMenuBundle::layout.html.twig' %}
{% block content -%}

    <h1>NavMenu creation</h1>

    <form action="{{ path('navmenu_create') }}" method="post" {{ form_enctype(form) }}>
        <dl>

            <dt>Name:</dt>
            <dd>{{ form_widget(form.name) }}</dd>
            <dt>Chose type:</dt>
            <dd>
                {{ form_widget(form.type) }}
            </dd>
            <div class="url_container">
                <dt>Custom url:</dt>
                <dd>{{ form_widget(form.url) }}</dd>
            </div>
             <div class="page_container">
                <dt>Chose page:</dt>
                <dd>
                    {{ form_widget(form.pageId) }}
                </dd>
             </div>

        </dl>

        {{ form_widget(form) }}

        <ul  class="unstyled inline">
            <li>
                <a href="{{ path('navmenu') }}" class="btn btn-inverse">
                    Back to the list
                </a>
            </li>
            <li>
                <button type="submit">{% trans %}Create{% endtrans %}</button>
            </li>
        </ul>

    </form>

{% endblock %}
