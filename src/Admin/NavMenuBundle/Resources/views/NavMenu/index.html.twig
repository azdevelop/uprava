{% extends '::base.html.twig' %}

{% block body -%}
    <h1>NavMenu list</h1>
        
    <h4>
        <a href="{{ path('navmenu_new') }}">
            Create a new entry
        </a>
    </h4>
    
    {{ navTree |raw }}
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Pageid</th>
                <th>Name</th>
                <th>Parentid</th>
                <th>Sort</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('navmenu_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.pageId }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.parentId }}</td>
                <td>{{ entity.sort }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('navmenu_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('navmenu_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
