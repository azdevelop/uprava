{% extends '::admin.html.twig' %}

{% block content -%}
    <h2 class="title">User:</h2>

    <table class="table table-bordered ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ entity.isActive }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>
    {% render url('activity_log',{ 'userId': entity.id }) %}
<ul class="unstyled inline">
    <li>
        <a href="{{ path('user') }}" class="btn btn-inverse">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-info">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
