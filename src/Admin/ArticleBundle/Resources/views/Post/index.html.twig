{% extends '::admin.html.twig' %}

{% block content -%}
    <h1>{% trans %}Post list{% endtrans %}</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Userid</th>
                <th>Createddate</th>
                <th>Modifieddate</th>
                <th>Status</th>
                <th>Posttype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.userId }}</td>
                <td>{% if entity.createdDate %}{{ entity.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.modifiedDate %}{{ entity.modifiedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
              
                <td>{{ entity.status }}</td>
                <td>{{ entity.postType }}</td>
                <td>
                <ul class="unstyled">
                    <li>
                        <a href="{{ path('post_show', { 'id': entity.id }) }}" class="label label-default">show</a>
                    </li>
                    <li>
                        <a href="{{ path('post_edit', { 'id': entity.id }) }}" class="label label-info">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul class="inline unstyled">
        <li>
            <a href="{{ path('post_new') }}" class="btn btn-info">
                {% trans %}new post{% endtrans %}
            </a>
        </li>
    </ul>
    {% endblock %}
