{% extends 'DashboardBundle::layout.html.twig' %}
{% block content -%}
<h2 class="title">{% trans %}Dashboard{% endtrans %}</h2>
    <div class="row">
        <div class="span4">
                Site name:
                <form action="{{ path('settings_update') }}" method="post" class="page-delete">
                <input type="hidden" name="site_name"  />
                {{ form_widget(siteNameForm) }}
                <button type="submit" class="btn btn-info">{% trans %}Save{% endtrans %}</button>
                </form>
        </div>
        <div class="span4">
            Home page:
            <form action="{{ path('settings_update') }}" method="post" class="page-delete">
                <input type="hidden" name="home_page" value="asdasd" />
                {{ form_widget(homePageForm) }}
                <button type="submit" class="btn btn-info">{% trans %}Save{% endtrans %}</button>
            </form>
        </div>
        <div class="span4">.col-xs-6 .col-sm-4 .col-md-4</div>
    </div>
    <div class="row">
        <div class="span6">
            {% render url('page_latest',{ 'num': 5 }) %}
        </div>
        <div class="span6">
            {% render url('post_latest',{ 'num': 5 }) %}
        </div>
    </div>
    <div class="row">
        <div class="span12">Home page:</div>
    </div>
{% endblock %}
