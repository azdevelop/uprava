{% extends '::admin.html.twig' %}

{% block content -%}
    <h1>{% trans %}Category edit{% endtrans %}</h1>

    <form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="treeList">
            {{ categoryTree |raw }}
        </div>
        <script>
            listTree.treeSelect( $("#admin_categorybundle_categorytype_parentId"));
        </script>
        <style>
            .treeList ul{
                list-style: none;
            }

            .treeList li{

                cursor:pointer;
            }

            .treeList .active{
                color: #325aff;
            }

        </style>
        <p>
            <button type="submit" class="btn btn-info">{% trans %}save{% endtrans %}</button>
        </p>
    </form>

        <ul class="record_actions inline unstyled">
    <li>
        <a href="{{ path('category') }}"  class="btn btn-inverse">
            {% trans %}Back to the list{% endtrans %}
        </a>
    </li>
    <li>
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">{% trans %}delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}
