{% extends '::admin.html.twig' %}

{% block content -%}
    <h1>{% trans %}Category edit{% endtrans %}</h1>

    <form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">{% trans %}save{% endtrans %}</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('category') }}">
            {% trans %}Back to the list{% endtrans %}
        </a>
    </li>
    <li>
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">{% trans %}delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}
