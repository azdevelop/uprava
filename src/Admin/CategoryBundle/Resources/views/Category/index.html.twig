{% extends '::admin.html.twig' %}

{% block content -%}
    <h1>{% trans %}Category list{% endtrans %}</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Title{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.title }}</td>
                <td>
                <ul class="unstyled">
                    <li>
                        <a href="{{ path('category_show', { 'id': entity.id }) }}" class="label label-default">{% trans %}show{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('category_edit', { 'id': entity.id }) }}" class="label label-info">{% trans %}edit{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('category_edit', { 'id': entity.id, 'locale':'sr'  }) }}" class="label label-info">edit sr</a>
                    </li>
                     <li>
                        <a href="{{ path('category_edit', { 'id': entity.id, 'locale':'cir'  }) }}" class="label label-info">edit sr</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="inline unstyled">
        <li>
            <a href="{{ path('category_new') }}" class="btn btn-info">
                {% trans %}New Category{% endtrans %}
            </a>
        </li>
    </ul>
    {% endblock %}
