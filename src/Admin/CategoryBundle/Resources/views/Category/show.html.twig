{% extends '::admin.html.twig' %}

{% block content -%}
    <h1>Category</h1>

    <table class="table table-bordered table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="unstyled inline">
        <li>
            <a href="{{ path('category') }}" class="btn btn-inverse">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': entity.id }) }}" class="btn btn-info">
                Edit
            </a>
        </li>
        <li>
            <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
